{
  "schema": "http://json-schema.org/schema#",
  "type": "object",
  "required": ["unit"],
  "properties": {
    "source": {
      "format": "uri",
      "type": "string"
    },
    "unit": {
      "type": "string",
      "enum": ["pounds", "kilograms"]
    },
    "workouts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/workout"
      }
    },
    "schedule": {
      "$ref": "#/definitions/schedule"
    }
  },
  "definitions": {
    "workout": {
      "type": "object",
      "required": ["name", "exercises"],
      "properties": {
        "name": {
          "type": "string"
        },
        "exercises": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/exercise"
          }
        }
      }
    },
    "exercise": {
      "type": "object",
      "required": ["name", "sets", "reps"],
      "properties": {
        "name": {
          "type": "string"
        },
        "sets": {
          "$ref": "#/definitions/positiveInt"
        },
        "reps": {
          "$ref": "#/definitions/positiveInt"
        },
        "load": {
          "$ref": "#/definitions/load"
        }
      }
    },
    "load": {
      "oneOf": [
        { "$ref": "#/definitions/incrementalLoad" },
        { "$ref": "#/definitions/percentageLoad" },
        { "$ref": "#/definitions/bucketLoad" }
      ]
    },
    "schedule": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["MWF", "5-2"]
        },
        "order": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        },
        "duration": {
          "oneOf": [
            {
              "type": "string",
              "enum": ["indefinite", "optional indefinite"]
            },
            {
              "type": "object",
              "properties": {
                "value": {
                  "$ref":"#/definitions/positiveInt"
                },
                "unit": {
                  "type": "string",
                  "enum": ["weeks", "days"]
                }
              }
            }
          ]
        }
      }
    },
    "incrementalLoad": {
      "type": "object",
      "required": ["type", "increment", "from"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["incremental"]
        },
        "increment": {
          "$ref": "#/definitions/positiveInt"
        },
        "from": {
          "type": "string",
          "enum": ["lastSuccess"]
        }
      }
    },
    "percentageLoad": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["percentage"]
        },
        "percent": {
          "$ref": "#/definitions/percentage"
        },
        "of": {
          "type": "string",
          "enum": ["1RM", "lastSuccess"]
        }
      }
    },
    "bucketLoad": {
      "type": "string",
      "enum": ["low", "moderate", "high"]
    },
    "positiveInt": {
      "type": "integer",
      "minimum": 1
    },
    "percentage": {
      "allOf": [
        {"$ref": "#/definitions/positiveInt"},
        {"maximum": 100}
      ]
    }
  }
}
