{
  "schema": "http://json-schema.org/schema#",
  "type": "object",
  "required": ["unit"],
  "properties": {
    "source": {
      "format": "uri",
      "type": "string"
    },
    "unit": {
      "type": "string",
      "enum": ["pounds", "kilograms"]
    },
    "workouts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/workout"
      }
    },
    "schedule": {
      "$ref": "#/definitions/schedule"
    }
  },
  "definitions": {
    "workout": {
      "type": "object",
      "required": ["name", "exercises"],
      "properties": {
        "name": {
          "type": "string"
        },
        "exercises": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/exercise"
          }
        }
      }
    },
    "exercise": {
      "type": "object",
      "required": ["name", "sets", "reps"],
      "properties": {
        "name": {
          "type": "string"
        },
        "sets": {
          "$ref": "#/definitions/positiveInt"
        },
        "reps": {
          "$ref": "#/definitions/positiveInt"
        },
        "load": {
          "$ref": "#/definitions/load"
        }
      }
    },
    "load": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["incremental"]
        }
      }
    },
    "schedule": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["MWF"]
        },
        "order": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        },
        "duration": {
          "oneOf": [
            {
              "type": "string",
              "enum": ["indefinite", "optional indefinite"]
            },
            {
              "type": "object",
              "properties": {
                "value": {
                  "$ref":"#/definitions/positiveInt"
                },
                "unit": {
                  "type": "string",
                  "enum": ["weeks", "days"]
                }
              }
            }
          ]
        }
      }
    },
    "positiveInt": {
      "type": "integer",
      "minimum": 1
    }
  }
}
